<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PriceChecker.VIEW.FrontPage"
    NavigationPage.HasNavigationBar="False"
             BackgroundColor="WhiteSmoke">

    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"  />
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>


            <Button Command="{Binding _ShowAdminPage}" Style="{StaticResource AdminBtn}" Grid.Row="1" Grid.Column="0"/>


            <Button Command="{Binding _ShowUserPage}" Style="{StaticResource UserBtn}" Grid.Row="1" Grid.Column="2" />
            <Label Text="Admin" HorizontalTextAlignment="Center" Grid.Row="2" Grid.Column="0"/>
            <Label Text="User"  HorizontalTextAlignment="Center" Grid.Row="2" Grid.Column="2"/>

        </Grid>
    </StackLayout>
</ContentPage>