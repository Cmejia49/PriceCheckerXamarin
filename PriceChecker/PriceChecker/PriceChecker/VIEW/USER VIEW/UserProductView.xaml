<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PriceChecker.VIEW.USER_VIEW.UserProductView">

        <StackLayout Padding="10,10" >
        <Entry Text="{Binding ProductID}" Style="{StaticResource DetailEntry}" IsReadOnly="True"  Placeholder="Product ID"/>

        <Entry Text="{Binding ProductCode}" Style="{StaticResource DetailEntry}" IsReadOnly="True"/>

        <Entry Text="{Binding ProductName}" Style="{StaticResource DetailEntry}" IsReadOnly="True"  />

        <Entry Text="{Binding ProductPrice}" Style="{StaticResource DetailEntry}" IsReadOnly="True" />

        </StackLayout>


</ContentView>